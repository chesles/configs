[color]
  ui = true

[merge]
  tool = vimdiff

[alias]
  ll = log --pretty=oneline --abbrev-commit --graph --decorate
  lr = log --pretty=oneline --abbrev-commit --graph --decorate -n 5
  co = checkout
  s = status
  d = diff
  desc = describe

[push]
  default = current
